{
  "name": "bim-contracts",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/repype/bim-contracts.git"
  },
  "scripts": {
    "dev": "npm-run-all -l -p client server",
    "dev:contracts": "truffle develop && migrate",
    "client": "cd client && quasar dev",
    "server": "nodemon ./server/index.js",
    "contracts:compile": "truffle compile",
    "contracts:migrate": "truffle migrate",
    "lint-all": "eslint *.js household-server/ mock-sensor/ test/ helpers/ household-ui/src utility-js/ scripts/ migrations/ && yarn lint-contracts",
    "lint-contracts": "solium -d contracts/",
    "format-all": "eslint *.js household-server/ mock-sensor/ test/ helpers/ household-ui/src utility-js/ scripts/ migrations/ --fix && yarn format-contracts",
    "format-contracts": "solium -d contracts/ --fix"
  },
  "author": "Fabian Piper <fabianpiper@web.de>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "@openzeppelin/upgrades": "^2.8.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "web3": "^1.2.11"
  }
}
